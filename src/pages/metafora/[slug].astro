---
import BaseLayout from '../../layouts/BaseLayout.astro'
import VoteButtons from '../../components/VoteButtons'
import { supabase } from '../../lib/supabase'
import type { MetaphorWithVotes } from '../../lib/types'

export async function getStaticPaths() {
  // Fetch all published metaphors to generate static pages
  const { data: metaphors } = await supabase
    .from('metaphors_with_votes')
    .select('*')
    .eq('status', 'published')
    .returns<MetaphorWithVotes[]>()

  if (!metaphors) return []

  return metaphors.map((metaphor) => ({
    params: { slug: metaphor.slug },
    props: { metaphor }
  }))
}

interface Props {
  metaphor: MetaphorWithVotes
}

const { metaphor } = Astro.props
---

<BaseLayout
  title={`${metaphor.nazev} | Metafory.cz`}
  description={metaphor.definice}
>
  <div>
    <!-- Back button -->
    <div class="mb-8">
      <a
        href="/"
        class="text-gray-600 hover:text-gray-900 transition-colors inline-flex items-center gap-2 text-sm"
      >
        ← Zpět na seznam
      </a>
    </div>

    <!-- Metaphor content -->
    <article>
      <h1 class="text-3xl font-bold mb-8 pb-6 border-b border-gray-200">{metaphor.nazev}</h1>

      <div class="space-y-8">
        <!-- Definition -->
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">
            Definice
          </h2>
          <p class="text-lg text-gray-800 leading-relaxed">
            {metaphor.definice}
          </p>
        </div>

        <!-- Example -->
        <div>
          <h2 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">
            Příklad použití
          </h2>
          <p class="text-base text-gray-700 italic leading-relaxed">
            „{metaphor.priklad}"
          </p>
        </div>

        <!-- Voting buttons -->
        <div class="pt-6 border-t border-gray-200">
          <h2 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-4">
            Hodnocení
          </h2>
          <VoteButtons
            client:load
            metaphorId={metaphor.id}
            initialLikes={metaphor.like_count}
            initialDislikes={metaphor.dislike_count}
            initialScore={metaphor.score}
          />
        </div>

        <!-- Author info if available -->
        {metaphor.autor_jmeno && (
          <div class="pt-6 border-t border-gray-200 text-sm text-gray-600">
            <p>
              Přidal(a): <span class="font-medium text-gray-900">{metaphor.autor_jmeno}</span>
            </p>
          </div>
        )}
      </div>
    </article>
  </div>
</BaseLayout>
