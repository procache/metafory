---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.'
} = Astro.props
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">

  <!-- Open Graph (future enhancement) -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
</head>
<body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
  <div class="max-w-3xl mx-auto px-6 py-12">
    <header class="mb-16">
      <nav class="flex items-center justify-between border-b border-gray-200 pb-6">
        <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-600 transition-colors">
          Metafory.cz
        </a>
        <div class="flex gap-8 text-sm font-medium">
          <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors">
            Metafory
          </a>
          <a href="/pridat" class="px-4 py-2 bg-gray-900 text-white rounded hover:bg-gray-700 transition-colors">
            Přidat metaforu
          </a>
        </div>
      </nav>
    </header>

    <main class="mb-20">
      <slot />
    </main>

    <footer class="pt-8 border-t border-gray-200 text-center text-sm text-gray-500">
      <p>&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
