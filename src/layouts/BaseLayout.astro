---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  canonicalUrl?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.',
  ogImage = '/og-image.jpg',
  canonicalUrl = Astro.url.href
} = Astro.props

const siteUrl = 'https://metafory.cz'
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="canonical" href={canonicalUrl}>

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">
  <meta name="language" content="Czech">
  <meta name="keywords" content="české metafory, metafora, rčení, idiomy, česká řeč, frazeologie">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, siteUrl).href}>
  <meta property="og:site_name" content="Metafory.cz">
  <meta property="og:locale" content="cs_CZ">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href}>

  <!-- Additional Meta Tags -->
  <meta name="theme-color" content="#8B7355">
  <meta name="format-detection" content="telephone=no">
</head>
<body class="min-h-screen antialiased" style="background-color: var(--color-bg-base); color: var(--color-text-primary);">
  <div class="max-w-4xl mx-auto px-5 sm:px-8 py-10 sm:py-16">
    <header class="mb-16 sm:mb-20">
      <nav class="pb-6 sm:pb-8" style="border-bottom: 1.5px solid var(--color-border);">
        <div class="flex items-center justify-between mb-4">
          <a
            href="/"
            class="hover:opacity-80 transition-opacity inline-block"
          >
            <img
              src="/metafory-logo.png"
              alt="Metafory.cz - Radost z češtiny"
              class="h-14 sm:h-18 lg:h-22 w-auto"
            />
          </a>
          <div class="flex gap-3 sm:gap-5 items-center">
            <form action="/" method="get" class="hidden sm:block relative">
              <input
                type="text"
                name="q"
                placeholder="Hledat..."
                class="px-4 py-2.5 pr-10 rounded-lg text-sm font-medium transition-all w-48 lg:w-64"
                style="border: 1.5px solid var(--color-border); background-color: var(--color-bg-card); color: var(--color-text-primary);"
                onfocus="this.style.borderColor='var(--color-accent-primary)'"
                onblur="this.style.borderColor='var(--color-border)'"
                value={Astro.url.searchParams.get('q') || ''}
              />
              <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 hover:opacity-70 transition-opacity" aria-label="Vyhledat">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="var(--color-positive)" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="11" cy="11" r="8"></circle>
                  <path d="m21 21-4.35-4.35"></path>
                </svg>
              </button>
            </form>
            <a
              href="/pridat"
              class="px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg text-sm font-semibold hover:transform hover:scale-105 transition-all shadow-md whitespace-nowrap"
              style="background-color: var(--color-positive); color: white;"
              onmouseover="this.style.backgroundColor='var(--color-positive-hover)'"
              onmouseout="this.style.backgroundColor='var(--color-positive)'"
            >
              Přidat metaforu
            </a>
          </div>
        </div>
        {Astro.url.pathname === '/' && (
          <div class="flex gap-2">
            <a
              href="/?view=all"
              class={`px-5 py-2.5 font-semibold text-sm transition-all border-b-3 ${
                (Astro.url.searchParams.get('view') || 'all') === 'all'
                  ? 'border-b-2'
                  : 'border-transparent hover:opacity-70'
              }`}
              style={(Astro.url.searchParams.get('view') || 'all') === 'all'
                ? { borderColor: 'var(--color-accent-primary)', color: 'var(--color-text-primary)' }
                : { color: 'var(--color-text-tertiary)' }
              }
            >
              Všechny
            </a>
            <a
              href="/?view=favorites"
              class={`px-5 py-2.5 font-semibold text-sm transition-all border-b-3 ${
                Astro.url.searchParams.get('view') === 'favorites'
                  ? 'border-b-2'
                  : 'border-transparent hover:opacity-70'
              }`}
              style={Astro.url.searchParams.get('view') === 'favorites'
                ? { borderColor: 'var(--color-accent-primary)', color: 'var(--color-text-primary)' }
                : { color: 'var(--color-text-tertiary)' }
              }
            >
              Nejoblíbenější
            </a>
            <a
              href="/?view=recent"
              class={`px-5 py-2.5 font-semibold text-sm transition-all border-b-3 ${
                Astro.url.searchParams.get('view') === 'recent'
                  ? 'border-b-2'
                  : 'border-transparent hover:opacity-70'
              }`}
              style={Astro.url.searchParams.get('view') === 'recent'
                ? { borderColor: 'var(--color-accent-primary)', color: 'var(--color-text-primary)' }
                : { color: 'var(--color-text-tertiary)' }
              }
            >
              Nově přidané
            </a>
            <a
              href="/co-je-metafora"
              class="px-5 py-2.5 font-semibold text-sm transition-all border-b-3 border-transparent hover:opacity-70"
              style="color: var(--color-text-tertiary);"
            >
              Co je metafora?
            </a>
          </div>
        )}
      </nav>
    </header>

    <main class="mb-20 sm:mb-24">
      <slot />
    </main>

    <footer class="pt-8 sm:pt-10 text-center text-sm" style="border-top: 1.5px solid var(--color-border); color: var(--color-text-tertiary);">
      <p>&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
