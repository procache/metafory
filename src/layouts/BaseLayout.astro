---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  canonicalUrl?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.',
  ogImage = '/og-image.jpg',
  canonicalUrl = Astro.url.href
} = Astro.props

const siteUrl = 'https://metafory.cz'
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="canonical" href={canonicalUrl}>

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">
  <meta name="language" content="Czech">
  <meta name="keywords" content="české metafory, metafora, rčení, idiomy, česká řeč, frazeologie">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, siteUrl).href}>
  <meta property="og:site_name" content="Metafory.cz">
  <meta property="og:locale" content="cs_CZ">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href}>

  <!-- Additional Meta Tags -->
  <meta name="theme-color" content="#8B7355">
  <meta name="format-detection" content="telephone=no">
</head>
<body class="min-h-screen antialiased" style="background-color: var(--color-bg-base); color: var(--color-text-primary);">
  <div class="max-w-4xl mx-auto px-5 sm:px-8 py-10 sm:py-16">
    <header class="mb-16 sm:mb-20">
      <nav class="flex items-center justify-between pb-6 sm:pb-8" style="border-bottom: 1.5px solid var(--color-border);">
        <a
          href="/"
          class="text-xl sm:text-2xl font-semibold tracking-tight hover:opacity-70 transition-opacity"
          style="color: var(--color-text-primary);"
        >
          Metafory.cz
        </a>
        <div class="flex gap-5 sm:gap-8 items-center text-sm font-medium">
          <a
            href="/"
            class="hidden sm:inline hover:opacity-70 transition-opacity"
            style="color: var(--color-text-secondary);"
          >
            Metafory
          </a>
          <a
            href="/pridat"
            class="px-5 py-2.5 rounded-lg font-medium hover:transform hover:scale-105 transition-all shadow-sm"
            style="background-color: var(--color-accent-primary); color: white;"
            onmouseover="this.style.backgroundColor='var(--color-accent-hover)'"
            onmouseout="this.style.backgroundColor='var(--color-accent-primary)'"
          >
            Přidat metaforu
          </a>
        </div>
      </nav>
    </header>

    <main class="mb-20 sm:mb-24">
      <slot />
    </main>

    <footer class="pt-8 sm:pt-10 text-center text-sm" style="border-top: 1.5px solid var(--color-border); color: var(--color-text-tertiary);">
      <p>&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
