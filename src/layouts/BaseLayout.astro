---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  canonicalUrl?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.',
  ogImage = '/og-image.jpg',
  canonicalUrl = Astro.url.href
} = Astro.props

const siteUrl = 'https://metafory.cz'
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="canonical" href={canonicalUrl}>

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">
  <meta name="language" content="Czech">
  <meta name="keywords" content="české metafory, metafora, rčení, idiomy, česká řeč, frazeologie">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, siteUrl).href}>
  <meta property="og:site_name" content="Metafory.cz">
  <meta property="og:locale" content="cs_CZ">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href}>

  <!-- Additional Meta Tags -->
  <meta name="theme-color" content="#8B7355">
  <meta name="format-detection" content="telephone=no">
</head>
<body class="min-h-screen antialiased" style="background-color: var(--color-bg-base); color: var(--color-text-primary);">
  <!-- Sticky Header -->
  <header class="sticky top-0 z-50 backdrop-blur-md" style="background-color: rgba(250, 247, 242, 0.95); border-bottom: 1.5px solid var(--color-border);">
    <div class="max-w-4xl mx-auto px-5 sm:px-8">
      <nav class="flex items-center justify-between py-4">
        <a
          href="/"
          class="hover:opacity-80 transition-opacity"
        >
          <img
            src="/metafory-logo.png"
            alt="Metafory.cz - Radost z češtiny"
            class="h-10 sm:h-12 w-auto"
          />
        </a>
        <a
          href="/pridat"
          class="inline-flex items-center gap-2 px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold text-sm sm:text-base hover:transform hover:scale-105 transition-all shadow-md"
          style="background-color: #10b981; color: white;"
          onmouseover="this.style.backgroundColor='#059669'"
          onmouseout="this.style.backgroundColor='#10b981'"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span class="hidden sm:inline">Přidat metaforu</span>
          <span class="sm:hidden">Přidat</span>
        </a>
      </nav>
    </div>
  </header>

  <div class="max-w-4xl mx-auto px-5 sm:px-8 py-10 sm:py-16">

    <main class="mb-20 sm:mb-24">
      <slot />
    </main>

    <footer class="pt-8 sm:pt-10 text-center text-sm" style="border-top: 1.5px solid var(--color-border); color: var(--color-text-tertiary);">
      <div class="mb-4">
        <a
          href="/co-je-metafora"
          class="hover:opacity-70 transition-opacity font-medium"
          style="color: var(--color-accent-primary);"
        >
          Co je metafora?
        </a>
      </div>
      <p>&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
