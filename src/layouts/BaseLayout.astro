---
import '../styles/global.css'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  canonicalUrl?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.',
  ogImage = '/og-image.jpg',
  canonicalUrl = Astro.url.href
} = Astro.props

const siteUrl = 'https://metafory.cz'
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="canonical" href={canonicalUrl}>

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">
  <meta name="language" content="Czech">
  <meta name="keywords" content="české metafory, metafora, rčení, idiomy, česká řeč, frazeologie">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, siteUrl).href}>
  <meta property="og:site_name" content="Metafory.cz">
  <meta property="og:locale" content="cs_CZ">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href}>

  <!-- Additional Meta Tags -->
  <meta name="theme-color" content="#111827">
  <meta name="format-detection" content="telephone=no">
</head>
<body class="min-h-screen bg-gray-50 text-gray-900 antialiased">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <header class="mb-12 sm:mb-16">
      <nav class="flex items-center justify-between border-b border-gray-200 pb-4 sm:pb-6">
        <a href="/" class="text-lg sm:text-xl font-bold text-gray-900 hover:text-gray-600 transition-colors">
          Metafory.cz
        </a>
        <div class="flex gap-4 sm:gap-8 text-sm font-medium">
          <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors hidden sm:inline">
            Metafory
          </a>
          <a href="/pridat" class="px-3 sm:px-4 py-2 bg-gray-900 text-white rounded hover:bg-gray-700 transition-colors text-xs sm:text-sm">
            Přidat
          </a>
        </div>
      </nav>
    </header>

    <main class="mb-16 sm:mb-20">
      <slot />
    </main>

    <footer class="pt-6 sm:pt-8 border-t border-gray-200 text-center text-xs sm:text-sm text-gray-500">
      <p>&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
