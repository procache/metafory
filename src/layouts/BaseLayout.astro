---
import '../styles/global.css'
import { supabase } from '../lib/supabase'

interface Props {
  title?: string
  description?: string
  ogImage?: string
  canonicalUrl?: string
}

const {
  title = 'Metafory.cz - České metafory a rčení',
  description = 'Online databáze českých metafor s možností vyhledávání, přidávání a hodnocení.',
  ogImage = '/og-image.jpg',
  canonicalUrl = Astro.url.href
} = Astro.props

const siteUrl = 'https://metafory.cz'

// Fetch total count of published metaphors for footer
const { count: metaphorCount } = await supabase
  .from('metaphors')
  .select('*', { count: 'exact', head: true })
  .eq('status', 'published')
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Favicons -->
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="manifest" href="/site.webmanifest">

  <link rel="canonical" href={canonicalUrl}>

  <!-- Basic SEO -->
  <meta name="author" content="Metafory.cz">
  <meta name="robots" content="index, follow">
  <meta name="language" content="Czech">
  <meta name="keywords" content="české metafory, metafora, rčení, idiomy, česká řeč, frazeologie">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, siteUrl).href}>
  <meta property="og:site_name" content="Metafory.cz">
  <meta property="og:locale" content="cs_CZ">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content={canonicalUrl}>
  <meta name="twitter:title" content={title}>
  <meta name="twitter:description" content={description}>
  <meta name="twitter:image" content={new URL(ogImage, siteUrl).href}>

  <!-- Additional Meta Tags -->
  <meta name="theme-color" content="#52B788">
  <meta name="format-detection" content="telephone=no">
</head>
<body class="min-h-screen antialiased" style="background: linear-gradient(160deg, #D8E3DD 0%, #CDD8D2 50%, #C2D3CC 100%); background-attachment: fixed; color: var(--color-text-primary);">
  <!-- Header (non-sticky) -->
  <header style="background-color: rgba(255, 255, 255, 0.95); box-shadow: var(--shadow-sm);">
    <div class="max-w-4xl mx-auto px-5 sm:px-8">
      <nav class="flex items-center justify-between py-4">
        <a
          href="/"
          class="hover:opacity-80 transition-opacity"
        >
          <img
            src="/metafory_cz_horizontal.png"
            alt="Metafory.cz - kořeni češtiny"
            class="h-24 sm:h-30 w-auto"
          />
        </a>
        <a
          href="/pridat"
          class="inline-flex items-center gap-2 px-4 sm:px-6 py-2.5 sm:py-3 rounded-lg font-semibold text-sm sm:text-base hover:transform hover:scale-105 transition-all shadow-md"
          style="background-color: var(--color-accent-red); color: white;"
          onmouseover="this.style.backgroundColor='var(--color-accent-red-hover)'"
          onmouseout="this.style.backgroundColor='var(--color-accent-red)'"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
          <span class="hidden sm:inline">Přidat metaforu</span>
          <span class="sm:hidden">Přidat</span>
        </a>
      </nav>
    </div>
  </header>

  <main class="mb-20 sm:mb-24">
    <slot />
  </main>

  <div class="max-w-4xl mx-auto px-5 sm:px-8 pb-10 sm:pb-16">

    <footer class="pt-10 sm:pt-12 pb-8">
      <div class="max-w-2xl mx-auto mb-8 px-4">
        <!-- Footer links -->
        <div class="flex justify-center items-center gap-6 mb-6">
          <a
            href="/co-je-metafora"
            class="text-sm sm:text-base font-medium hover:opacity-70 transition-opacity"
            style="color: var(--color-text-primary);"
          >
            Co je metafora
          </a>
          <span style="color: var(--color-text-tertiary);">•</span>
          <a
            href="/kontakt"
            class="text-sm sm:text-base font-medium hover:opacity-70 transition-opacity"
            style="color: var(--color-text-primary);"
          >
            Přání a stížnosti
          </a>
        </div>
      </div>
      {metaphorCount !== null && (
        <p class="text-sm text-center mb-2" style="color: var(--color-heading-blue);">
          Celkem metafor: <span class="font-semibold">{metaphorCount}</span>
        </p>
      )}
      <p class="text-sm text-center" style="color: var(--color-text-tertiary);">&copy; {new Date().getFullYear()} Metafory.cz — Databáze českých metafor</p>
    </footer>
  </div>
</body>
</html>
